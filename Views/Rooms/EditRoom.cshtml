@model MVC_SomerenProject.Models.Rooms

@{
	ViewData["Title"] = "Edit Room";
}

<h4>Edit Room</h4>
<form action="/Rooms/Edit" method="POST">
	<div class="form-group py-2">
		<label for="RoomNumber">Room Number:</label>
		<input type="text" id="RoomNumber" name="RoomNumber" class="form-control" required value="@Model?.RoomNumber" />
	</div>

	<div class="form-group py-2">
		<label for="RoomSize">Room Size:</label>
		<input type="text" id="RoomSize" name="RoomSize" class="form-control" required value="@Model?.RoomSize" />
	</div>

	<div class="form-group py-2">
		<label for="RoomType">Room Type:</label>
		<input type="text" id="RoomType" name="RoomType" class="form-control" required value="@Model?.RoomType" />
	</div>

	<button type="submit" class="btn btn-primary">Edit</button>
</form>

<a href="/Rooms/Index">Back to List</a>

@model MVC_SomerenProject.Models.Activities

@{
	ViewData["Title"] = "Delete Activity";
}

<h4>Delete Activity</h4>
<form action="/Activities/Delete" method="POST">
	<div class="form-group py-2">
		<label for="Name">Name:</label>
		<<input type="hidden" asp-for="Name" />
	</div>

	<div class="form-group py-2">
		<label for="Date">Date:</label>
		<input type="text" id="Date" name="Date" class="form-control" required value="@Model?.Date" />
	</div>

	<div class="form-group py-2">
		<label for="Description">Description:</label>
		<input type="text" id="Description" name="Description" class="form-control" required value="@Model?.Description" />
	</div>

	<button type="submit" class="btn btn-primary">Delete</button>
</form>

<a href="/Activities/Index">Back to List</a>
@model MVC_SomerenProject.Models.Drinks
@{
    ViewData["Title"] = "AddDrink";
}

<div class="controller_body">
    <form action="/Drinks/AddDrink" method="POST">
        <article class="input_group">
            <label for="Name">Drink Name</label>
            <input type="text" class="input_field" asp-for="Name" required />
        </article>

        <article class="input_group">
            <label for="Category">Category (Alcohol)</label>
            <select id="Category" name="Category" class="input_field">
                <option value="Alcoholic">Alcoholic</option>
                <option value="Nonalcoholic">Nonalcoholic</option>
            </select>
        </article>

        <article class="input_group">
            <label for="Stock">Stock</label>
            <input type="number" class="input_field" asp-for="Stock" required />
        </article>

        <button type="submit" class="add_entity_main">Add Drink</button>


    </form>

</div>
